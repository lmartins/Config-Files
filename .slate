# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Abstract positions
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
alias topleft corner top-left resize:screenSizeX/2;screenSizeY/2
alias topright corner top-right resize:screenSizeX/2;screenSizeY/2
alias bottomleft corner bottom-left resize:screenSizeX/2;screenSizeY/2
alias bottomright corner bottom-right resize:screenSizeX/2;screenSizeY/2

alias leftthird move screenOriginX;screenOriginY screenSizeX*0.40;screenSizeY
alias rightthird move screenOriginX+screenSizeX*0.40;screenOriginY screenSizeX*0.60;screenSizeY

# Numpad location Bindings
bind pad1:ctrl;shift ${bottomleft}
bind pad2:ctrl;shift push bottom bar-resize:screenSizeY/2
bind pad3:ctrl;shift ${bottomright}
bind pad4:ctrl;shift ${leftthird}
bind pad5:ctrl;shift ${full}
bind pad6:ctrl;shift ${rightthird}
bind pad7:ctrl;shift ${topleft}
bind pad8:ctrl;shift push top bar-resize:screenSizeY/2
bind pad9:ctrl;shift ${topright}

bind up:ctrl;shift ${full}
bind left:ctrl;shift ${lefthalf}
bind right:ctrl;shift ${righthalf}


# LAYOUTS
layout 1monitor 'Sublime Text 2':REPEAT ${leftthird}
layout 1monitor 'Google Chrome':REPEAT ${rightthird}

# LAYOUTS KEY BINDINGS
bind l:shift;ctrl layout 1monitor


# Resize Bindings
bind right:shift;ctrl;alt       resize +5% +0
bind left:shift;ctrl;alt        resize -5% +0
bind up:shift;ctrl;alt          resize +0   -5%
bind down:shift;ctrl;alt        resize +0   +5%
# bind right:ctrl;alt  resize -5% +0 bottom-right
# bind left:ctrl;alt   resize +5% +0 bottom-right
# bind up:ctrl;alt     resize +0   +5% bottom-right
# bind down:ctrl;alt   resize +0   -5% bottom-right

# Push Bindings
bind right:ctrl;cmd  push right bar-resize:screenSizeX/3
bind left:ctrl;cmd   push left  bar-resize:screenSizeX/3
bind up:ctrl;cmd     push up    bar-resize:screenSizeY/2
bind down:ctrl;cmd   push down  bar-resize:screenSizeY/2

bind right:shift;ctrl;cmd  push right bar-resize:screenSizeX/3*2
bind left:shift;ctrl;cmd   push left  bar-resize:screenSizeX/3*2
# bind up:shift;ctrl;cmd     push up    bar-resize:screenSizeY/2
# bind down:shift;ctrl;cmd   push down  bar-resize:screenSizeY/2

# Nudge Bindings
# bind right:shift;alt nudge +5% +0
# bind left:shift;alt  nudge -5% +0
# bind up:shift;alt    nudge +0   -5%
# bind down:shift;alt  nudge +0   +5%

# Throw Bindings
# bind 1:ctrl;alt         throw 0 resize
# bind 2:ctrl;alt         throw 1 resize
# bind 3:ctrl;alt         throw 2 resize
# bind right:ctrl;alt;cmd throw right resize
# bind left:ctrl;alt;cmd  throw left  resize
# bind up:ctrl;alt;cmd    throw up    resize
# bind down:ctrl;alt;cmd  throw down  resize

# Focus Bindings
bind right:ctrl    focus right
bind left:ctrl     focus left
bind up:ctrl       focus up
bind down:ctrl     focus down
bind up:ctrl;alt   focus behind
bind down:ctrl;alt focus behind

# Window Hints
bind e:ctrl hint


# Grid
bind esc:ctrl grid padding:5 2560x1440:12,8